<h2><%= @task.title %></h2>

<p><%= @task.details %> - <%= @task.completed ? "todo" : "done" %></p>


<%= link_to "back to list", tasks_path %> <br>
<%= link_to "update task", edit_task_path(@task) %> <br>
<%= link_to "delete task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
